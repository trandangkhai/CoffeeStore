@page "/admin/coffees/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Coffee.CoffeeID</td></tr>
        <tr><th>Title</th><td>@Coffee.Title</td></tr>
        <tr><th>Description</th><td>@Coffee.Size</td></tr>
        <tr><th>Genre</th><td>@Coffee.Genre</td></tr>
        <tr><th>Price</th><td>@Coffee.Price.ToString("C")</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>
@code {
    [Inject]
    public ICoffeeStoreRepository Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Coffee Coffee { get; set; }
    protected override void OnParametersSet()
    {
        Coffee = Repository.Coffees.FirstOrDefault(b => b.CoffeeID == Id);
    }
    public string EditUrl => $"/admin/books/edit/{Coffee.CoffeeID}";
}